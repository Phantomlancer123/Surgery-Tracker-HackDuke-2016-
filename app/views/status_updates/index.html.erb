<p id="notice"><%= notice %></p>

<h1>Status Updates</h1>

<table>
  <thead>
    <tr>
      <th>Progress</th>
      <th>Message</th>
      <th>Surgery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @status_updates.each do |status_update| %>
      <tr>
        <td><%= status_update.progress %></td>
        <td><%= status_update.message %></td>
        <td><%= status_update.surgery_id %></td>
        <td><%= link_to 'Show', status_update %></td>
        <td><%= link_to 'Edit', edit_status_update_path(status_update) %></td>
        <td><%= link_to 'Destroy', status_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Status Update', new_status_update_path %>
